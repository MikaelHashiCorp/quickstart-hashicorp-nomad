{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "taskcat lint",
            "type": "shell",
            "command": "taskcat",
            "args": ["lint"],
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": {
                "owner": "yaml",
                "fileLocation": ["absolute"],
                "pattern": [
                    {
                    // "regexp": "^\\[[A-Z ]{7}\\] : Linting [^:]+: (.*)$",
                    "regexp": "^\\[([A-Z]+) *\\] : (Linting [^:]+|Failed to add child template):? (.*)$",
                    "file": 3,
                    },
                    {
                    "regexp": "^\\[([A-Z]+) *\\] :     line (\\d+) \\[\\d+\\] \\[([^\\]]+)\\] (.*)$",
                    "line": 2,
                    "severity": 1,
                    "message": 4,
                    "code": 3,
                    "loop": true
                    }
                ]
            }
        }
    ]
}